*{
	padding:0;
	margin:0;
	font-family: Calibri;
}




.container{
	width:100%;
	height:100vh;
	background-image:url(images/team.jpeg);
	background-size:100% 130%;
	background-repeat:no-repeat;
	background-position: center;
	

	
}

.links ul li{
	display:inline-block;
	list-style:none;
	margin:10px 20px;
	padding-top:.3%;
}

.links ul li a{
	text-decoration:none;
	color:#fff;
	padding:5px 20px;
	border:1px solid transparent;
	background-color:black;
}

.links ul li a:hover{
	color:black;
	background-color:white;
	
}

.title{
	line-height: 500px;
	height: 200px;
	text-align:center;
	
	
}

.title p{
	color:white;
	line-height: 1.5;
    display: inline-block;
	vertical-align: middle;
	font-size:80px;
	
}

